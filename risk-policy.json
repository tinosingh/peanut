{
  "version": "1",
  "riskTierRules": {
    "high": [
      "db/**",
      "src/ingest/**",
      "src/api/**",
      "docker-compose.yml",
      "Makefile"
    ],
    "low": ["**"]
  },
  "mergePolicy": {
    "high": {
      "requiredChecks": [
        "risk-policy-gate",
        "harness-smoke",
        "CI Pipeline"
      ]
    },
    "low": {
      "requiredChecks": ["risk-policy-gate", "CI Pipeline"]
    }
  },
  "docsDriftRules": {
    "triggerPaths": ["db/**", "src/api/**"],
    "requiredDocs": ["PRD.md"]
  }
}
