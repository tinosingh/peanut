# Copy to .env and fill in values before running docker compose up

# ── Postgres ──────────────────────────────────────────────────────────────────
POSTGRES_USER=pkg
POSTGRES_PASSWORD=changeme
POSTGRES_DB=pkg
POSTGRES_PORT=5432
# Full connection URL used by app code and Alembic
POSTGRES_URL=postgresql://pkg:changeme@pkg-db:5432/pkg

# ── FalkorDB (Redis-compatible) ───────────────────────────────────────────────
FALKORDB_HOST=pkg-graph
FALKORDB_PORT=6379

# ── Ollama — runs on HOST, not in Docker ──────────────────────────────────────
# Mac/Windows: http://host.docker.internal:11434
# Linux:       http://172.17.0.1:11434  (or set extra_hosts in compose)
OLLAMA_URL=http://host.docker.internal:11434
EMBED_MODEL=nomic-embed-text
# EMBED_MODEL_V2=nomic-embed-text  # Used by make reindex

# ── API (tui-controller) ──────────────────────────────────────────────────────
API_PORT=8000
# Internal URL for TUI → API calls (used by Textual screens)
API_BASE_URL=http://localhost:8000

# ── Auth — scoped API keys ────────────────────────────────────────────────────
# Generate with: make rotate-keys
# Leave blank to disable auth in development
API_KEY_READ=
API_KEY_WRITE=

# ── File paths ────────────────────────────────────────────────────────────────
DROP_ZONE_PATH=/drop-zone
VAULT_SYNC_PATH=/vault-sync

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
